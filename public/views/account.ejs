<h3>Hello <%= name %>
</h3>
<a href="/<%= username %>/account-settings">Update an Account </a>
<a href="/<%= username %>/tasks">My Tasks</a>
<p>Log Out</p>
<button id="logout-btn" onclick="logOut()">Confirm</button>
<p>Delete Account</p>
<button id="delete-btn" onclick="deleteAccount()">Confirm</button>

<script>
  function logOut() {
    fetch("/<%= username %>/account", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      }
    }).then(response => {
      if (response.ok) {
        window.location.href = "/";
      }
    }).catch(error => {
      console.error("Logout error:", error);
    });
  }

  function deleteAccount() {
    fetch("/<%= username %>/account", {
      method: "DELETE",
      headers: {
        "Content-Type": "application/json",
      }
    }).then(async (response) => {
      const data = await response.json();
      if (data.redirect) {
        window.location.href = data.redirect;
      }
    }).catch(error => {
      console.error("Deleting error:", error);
    });
  }
</script>